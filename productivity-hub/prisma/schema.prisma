generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Content {
  id        String   @id @default(cuid())
  type      String
  title     String
  dueDate   BigInt   // Storing timestamp as BigInt
  status    String
  createdAt BigInt
  updatedAt BigInt
  notes     String?

  // Short specific
  platform          String?
  hookpointScriptId String?
  
  // YouTube specific
  category        String?
  thumbnailStatus String?
  seoNotes        String?

  // Newsletter specific
  weekOf   BigInt?
  sendDate BigInt?

  // JSON fields for complex structures
  checklist Json? // For Short and YouTube
  sections  Json? // For Newsletter

  @@map("content")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  dueDate     BigInt
  priority    String
  category    String
  completed   Boolean   @default(false)
  completedAt BigInt?
  createdAt   BigInt
  updatedAt   BigInt
  
  // JSON fields
  timeBlock Json?
  recurring Json?

  subtasks Subtask[]

  @@map("tasks")
}

model Subtask {
  id        String  @id @default(cuid())
  title     String
  completed Boolean @default(false)
  taskId    String
  task      Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("subtasks")
}

model HookpointScript {
  id        String @id @default(cuid())
  title     String
  topic     String
  category  String
  hook      String
  body      String
  cta       String
  visuals   String
  createdAt BigInt
  updatedAt BigInt

  @@map("hookpoint_scripts")
}


model Exercise {
  id          String   @id @default(cuid())
  name        String
  category    String   // Push, Pull, Legs, Core
  defaultSets Int      @default(3)
  defaultReps Int      @default(10)
  createdAt   BigInt
  updatedAt   BigInt

  workoutExercises WorkoutExercise[]

  @@map("exercises")
}

model HealthMetric {
  id        String   @id @default(cuid())
  date      String   // Format: YYYY-MM-DD
  weight    String?
  steps     String?
  calories  String?
  rhr       String?
  hrv       String?
  exercise  String?
  createdAt BigInt
  updatedAt BigInt

  @@unique([date])
  @@map("health_metrics")
}

model Workout {
  id        String   @id @default(cuid())
  name      String   // e.g. "Push A"
  date      BigInt
  duration  Int?     // in minutes
  notes     String?
  createdAt BigInt
  updatedAt BigInt

  exercises WorkoutExercise[]

  @@map("workouts")
}

model WorkoutExercise {
  id         String   @id @default(cuid())
  workoutId  String
  exerciseId String
  order      Int      @default(0)

  workout    Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  sets       Set[]

  @@map("workout_exercises")
}

model Set {
  id                String   @id @default(cuid())
  workoutExerciseId String
  reps              Int
  weight            Float
  type              String   @default("working") // warmup, working
  completed         Boolean  @default(false)

  workoutExercise   WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)

  @@map("sets")
}

model WeeklyPlan {
  id          String  @id @default(cuid())
  weekOf      BigInt  // Start date of the week
  status      String  @default("in-progress") // in-progress, completed
  reflections Json?   // Step 2: wins, challenges
  goals       Json?   // Steps 3-6: spiritual, personal, business, content
  roadblocks  String? // Step 7: anticipated issues
  commitment  String? // Step 8: summary and mid-week check-in
  createdAt   BigInt
  updatedAt   BigInt
  completedAt BigInt?

  @@map("weekly_plans")
}
